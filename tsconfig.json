{
  "compilerOptions": {
    "lib": ["dom", "es5", "es6", "es2017", "ESNext.AsyncIterable"],

    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "strict": false
  },
  "include": ["db/**/*{.tsx,.ts,.js}"],
  "exclude": ["node_modules", "**/*.spec{.ts,.tsx,.js"]
}
